{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "configure-debug",
            "displayName": "Configure Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_FORMAT": "ON",
                "ENABLE_CUDA_DEBUG": "ON",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "CMAKE_CUDA_HOST_COMPILER": "/usr/bin/clang++-19",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda-12.8/bin/nvcc",
                "CUTLASS_PATH": "$env{CUTLASS_PATH}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "configurePreset": "configure-debug"
        }
    ]
}
